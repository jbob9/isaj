---
import { Microscope, Send, ShieldCheck, Trophy, Users } from "lucide-react";
---

<div
  class="relative z-20 mx-auto -mt-10 max-w-6xl px-4 sm:px-6 lg:-mt-16 lg:px-8"
>
  <div
    class="relative overflow-hidden rounded-[2.5rem] bg-slate-900 p-8 text-white shadow-2xl md:rounded-[3rem] lg:p-12"
  >
    {/* Paper airplane decoration */}
    <div
      class="absolute top-6 right-8 hidden animate-pulse text-blue-400/20 md:block"
    >
      <Send size={32} className="rotate-[-15deg]" />
    </div>

    <div
      class="grid grid-cols-1 items-center gap-10 sm:grid-cols-2 lg:grid-cols-4 lg:gap-4"
    >
      {/* Stat 1: Ratio */}
      <div class="flex items-center gap-5 px-4">
        <div class="shrink-0 rounded-2xl bg-blue-500/20 p-4">
          <Users className="text-blue-500" size={28} />
        </div>
        <div>
          <div class="text-3xl font-bold">1:8</div>
          <p
            class="mt-1 text-[10px] leading-tight font-bold tracking-widest text-slate-400 uppercase"
          >
            Étudiant-enseignant<br />Ratio
          </p>
        </div>
      </div>

      {/* Stat 2: Security */}
      <div class="flex items-center gap-5 px-4 lg:border-l lg:border-slate-800">
        <div class="shrink-0 rounded-2xl bg-emerald-500/20 p-4">
          <ShieldCheck className="text-emerald-500" size={28} />
        </div>
        <div>
          <div class="text-3xl font-bold">100%</div>
          <p
            class="mt-1 text-[10px] leading-tight font-bold tracking-widest text-slate-400 uppercase"
          >
            Sécurité du campus
          </p>
        </div>
      </div>

      {/* Stat 3: Facilities */}
      <div class="flex items-center gap-5 px-4 lg:border-l lg:border-slate-800">
        <div class="shrink-0 rounded-2xl bg-indigo-500/20 p-4">
          <Microscope className="text-indigo-400" size={28} />
        </div>
        <div>
          <div class="text-3xl font-bold">15+</div>
          <p
            class="mt-1 text-[10px] leading-tight font-bold tracking-widest text-slate-400 uppercase"
          >
            Laboratoires d'activités<br />spécialisées
          </p>
        </div>
      </div>

      {/* Stat 4: Success */}
      <div class="flex items-center gap-5 px-4 lg:border-l lg:border-slate-800">
        <div class="shrink-0 rounded-2xl bg-amber-500/20 p-4">
          <Trophy className="text-amber-500" size={28} />
        </div>
        <div>
          <div class="text-3xl font-bold">98%</div>
          <p
            class="mt-1 text-[10px] leading-tight font-bold tracking-widest text-slate-400 uppercase"
          >
            Taux de réussite
          </p>
        </div>
      </div>
    </div>

    {/* Decorative background blur */}
    <div
      class="absolute -right-10 -bottom-10 h-40 w-40 rounded-full bg-blue-500/5 blur-3xl"
    >
    </div>
  </div>
</div>
