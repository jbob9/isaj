---
import { ArrowRight, Baby, BookOpen, GraduationCap, Zap } from "lucide-react";

const stages = [
  {
    id: 0,
    title: "Petits explorateurs",
    grades: "Enfant en bas âge - Pre-K",
    age: "Ages 2 - 5",
    desc: "Cultiver la curiosité par le jeu sensoriel et les fondements du développement social.",
    color: "bg-blue-100",
    textColor: "text-blue-600",
    icon: Baby,
  },
  {
    id: 1,
    title: "Fondamentales",
    grades: "Niveaux 1 à 5",
    age: "Ages 6 - 11",
    desc: "Développer la maîtrise de la lecture, de l'écriture, du calcul et de la résolution créative de problèmes.",
    color: "bg-indigo-100",
    textColor: "text-indigo-600",
    icon: BookOpen,
  },
  {
    id: 2,
    title: "Croissance et identité",
    grades: "6e à 8e année",
    age: "Ages 12 - 14",
    desc: "Encourager la pensée critique et explorer en profondeur ses intérêts personnels.",
    color: "bg-cyan-100",
    textColor: "text-cyan-600",
    icon: Zap,
  },
  {
    id: 3,
    title: "Futurs leaders",
    grades: "9e à NS4 année",
    age: "Ages 15 - 18",
    desc: "Préparation universitaire avancée, parcours professionnels et compétences de leadership concrètes.",
    color: "bg-emerald-100",
    textColor: "text-emerald-600",
    icon: GraduationCap,
  },
];
---

<section class="mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8">
  <div class="mb-16 text-center">
    <h2
      class="mb-6 text-4xl leading-tight font-bold text-slate-900 md:text-5xl"
    >
      Un voyage complet de <span class="font-serif text-blue-600 italic"
        >A to Z</span
      >
    </h2>
    <p class="mx-auto max-w-2xl text-slate-500">
      Nous accompagnons votre enfant à chaque étape importante de sa scolarité.
      Notre programme intégré couvre tous les niveaux, assurant une transition
      harmonieuse des premiers pas jusqu'à la remise des diplômes.
    </p>
  </div>

  <div class="relative">
    {/* Connector Line (Desktop) */}
    <div
      class="absolute top-1/2 left-0 -z-10 hidden h-1 w-full -translate-y-1/2 bg-blue-100 lg:block"
    >
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      {
        stages.map((stage, idx) => (
          <div class="group relative cursor-pointer rounded-[2.5rem] border border-blue-50 bg-white p-8 shadow-xl shadow-blue-900/5 transition-all duration-500 hover:-translate-y-2">
            <div
              class={`h-14 w-14 ${stage.color} ${stage.textColor} mb-6 flex rotate-3 transform items-center justify-center rounded-2xl transition-transform group-hover:rotate-12`}
            >
              <stage.icon size={24} />
            </div>
            <span class="mb-2 block text-xs font-bold tracking-widest text-slate-400 uppercase">
              {stage.age}
            </span>
            <h3 class="mb-2 text-2xl font-bold text-slate-900">
              {stage.title}
            </h3>
            <p class={`text-sm font-semibold ${stage.textColor} mb-4`}>
              {stage.grades}
            </p>
            <p class="mb-6 text-sm leading-relaxed text-slate-500">
              {stage.desc}
            </p>

            <div class="flex items-center text-xs font-bold text-slate-700 transition-colors group-hover:text-blue-600">
              Explore Curriculum <ArrowRight size={14} className="ml-2" />
            </div>

            {/* Badge for continuity */}
            <div class="absolute -right-3 -bottom-3 flex h-10 w-10 items-center justify-center rounded-full border border-blue-50 bg-white font-bold text-slate-300 shadow-md">
              0{idx + 1}
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div
    class="relative mt-16 flex flex-col items-center justify-between gap-6 overflow-hidden rounded-4xl bg-slate-900 p-8 text-white md:flex-row"
  >
    <div class="relative z-10">
      <h4 class="mb-2 text-xl font-bold">Prêt à commencer le voyage ?</h4>
      <p class="text-sm text-slate-400">
        Découvrez notre guide complet des programmes scolaires pour 2026.
      </p>
    </div>
    <button
      class="relative z-10 flex items-center gap-2 rounded-full bg-blue-600 px-8 py-3 font-bold text-white shadow-lg shadow-blue-500/20 transition-all hover:bg-blue-700"
    >
      Consulter le prospectus <ArrowRight size={18} />
    </button>
    {/* Background decorative blob */}
    <div
      class="absolute -right-10 -bottom-10 h-40 w-40 rounded-full bg-blue-500/10 blur-3xl"
    >
    </div>
  </div>
</section>
