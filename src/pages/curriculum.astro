---
import {
  ArrowLeft,
  Brain,
  CheckCircle2,
  Compass,
  Globe,
  Microscope,
  Palette,
  Rocket,
  Sparkles,
} from "lucide-react";
import Layout from "../layouts/Layout.astro";

const curriculumLevels = [
  {
    title: "Petits explorateurs",
    subtitle: "La Fondation de la Curiosité",
    grades: "Enfants en bas âge - Préscolaire",
    icon: Compass,
    color: "blue",
    details: [
      {
        label: "Étapes cognitives",
        items: [
          "La permanence de l'objet par le jeu",
          "Reconnaissance des formes et des couleurs de base",
          "Exposition auditive bilingue",
        ],
      },
      {
        label: "Développement social",
        items: [
          "Ateliers de régulation émotionnelles",
          "Fondements du jeu coopératif",
          "Histoires qui développent l'empathie",
        ],
      },
      {
        label: "Croissance physique",
        items: [
          "Activités de motricité fine",
          "Exploration de la nature en plein air",
          "Mouvement rythmique et danse",
        ],
      },
    ],
  },
  {
    title: "Fondements fondamentaux",
    subtitle: "Maîtrise des fondamentaux",
    grades: "Niveaux 1 à 5",
    icon: Microscope,
    color: "indigo",
    details: [
      {
        label: "Corps académique",
        items: [
          "Méthodologie mathématique",
          "Programmes d'alphabétisation immersive",
          "Perspectives historiques du monde",
        ],
      },
      {
        label: "Intégration des STIM",
        items: [
          "Introduction à la logique/au codage",
          "Science du jardinage durable",
          "Projets de conception",
        ],
      },
      {
        label: "Expression créative",
        items: [
          "Temps d'atelier d'arts visuels",
          "Théorie et pratique musicales",
          "Confiance en soi lors de la prise de parole en public",
        ],
      },
    ],
  },
  {
    title: "Croissance et identité",
    subtitle: "Naviguer vers l'indépendance",
    grades: "6e à 8e année",
    icon: Brain,
    color: "cyan",
    details: [
      {
        label: "Noyau avancé",
        items: [
          "Revues de la littérature analytique",
          "Pré-algèbre et géométrie",
          "études géopolitiques mondiales",
        ],
      },
      {
        label: "Laboratoire d'innovation",
        items: [
          "Principes de base du développement d'applications",
          "Robotique et ingénierie",
          "Défense de l'environnement",
        ],
      },
      {
        label: "Découverte de soi",
        items: [
          "Leadership et éthique",
          "Rotation des intérêts professionnels",
          "Coaching en santé et bien-être",
        ],
      },
    ],
  },
  {
    title: "Futurs leaders",
    subtitle: "Préparation à l'impact",
    grades: "9e à 12e année",
    icon: Rocket,
    color: "emerald",
    details: [
      {
        label: "Excellence académique",
        items: [
          "Parcours de niveau avancé (AP)",
          "Éducation économique et financière",
          "Psychologie et sciences du comportement",
        ],
      },
      {
        label: "Préparation au monde réel",
        items: [
          "Stage en entreprise",
          "Programme passerelle universitaire",
          "l'entrepreneuriat social",
        ],
      },
      {
        label: "Citoyen du monde",
        items: [
          "Objectifs de maîtrise multilingue",
          "Préparation aux échanges internationaux",
          "Projets à impact communautaire",
        ],
      },
    ],
  },
];
---

<Layout>
  <span class="hidden text-cyan-500"></span>
  <section
    class="animate-in fade-in slide-in-from-bottom-6 mx-auto max-w-7xl px-4 py-12 duration-700 sm:px-6 lg:px-8"
  >
    <div
      class="mb-16 flex flex-col items-center justify-between gap-8 md:flex-row"
    >
      <div>
        <a
          href="/"
          class="group mb-6 flex items-center text-slate-500 transition-colors hover:text-blue-600"
        >
          <ArrowLeft
            size={20}
            className="mr-2 transform transition-transform group-hover:-translate-x-1"
          />
          Back to Home
        </a>
        <h1 class="text-4xl leading-tight font-bold text-slate-900 md:text-6xl">
          ISAJ <span class="font-serif text-blue-600 italic">Prospectus</span> 2026
        </h1>
        <p class="mt-4 max-w-2xl text-lg text-slate-500">
          Un regard transparent et détaillé sur la manière dont nous cultivons
          le potentiel à chaque étape unique du développement éducatif d'un
          enfant.
        </p>
      </div>

      <div class="hidden gap-4 lg:flex">
        <div
          class="rounded-4xl border border-blue-50 bg-white p-6 text-center shadow-xl"
        >
          <Globe className="mx-auto mb-2 text-blue-500" size={24} />
          <div class="text-2xl font-bold">5+</div>
          <div class="text-[10px] font-bold text-slate-400 uppercase">
            Langues
          </div>
        </div>
        <div
          class="rounded-4xl border border-blue-50 bg-white p-6 text-center shadow-xl"
        >
          <Palette className="mx-auto mb-2 text-indigo-500" size={24} />
          <div class="text-2xl font-bold">10+</div>
          <div class="text-[10px] font-bold text-slate-400 uppercase">
            Ateliers
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-24">
      {
        curriculumLevels.map((level, idx) => (
          <div class="group relative">
            <div class="grid grid-cols-1 items-start gap-12 lg:grid-cols-12">
              {/* Sidebar Info */}
              <div class="lg:col-span-4">
                <div class="sticky top-32">
                  <div class="mb-6 flex items-center gap-4">
                    <div class="rounded-2xl border border-slate-50 bg-white p-4 shadow-lg transition-transform group-hover:scale-110">
                      <level.icon
                        className={`text-${level.color}-500`}
                        size={32}
                      />
                    </div>
                    <div>
                      <span class="text-xs font-bold tracking-widest text-slate-400 uppercase">
                        {level.grades}
                      </span>
                      <h2 class="text-3xl font-bold text-slate-900">
                        {level.title}
                      </h2>
                    </div>
                  </div>
                  <p class="mb-8 font-serif text-lg text-slate-500 italic">
                    "{level.subtitle}"
                  </p>
                  <div
                    class={`h-1 w-20 bg-${level.color}-500 mb-8 rounded-full`}
                  />
                  <a
                    href={`/grade/${idx}`}
                    class="flex items-center text-sm font-bold text-blue-600 transition-all hover:gap-2"
                  >
                    Demander le programme complet{" "}
                    <Sparkles className="ml-2" size={16} />
                  </a>
                </div>
              </div>

              {/* Curriculum Breakdown */}
              <div class="grid grid-cols-1 gap-8 md:grid-cols-3 lg:col-span-8">
                {level.details.map((detail, dIdx) => (
                  <div class="rounded-[2.5rem] border border-blue-50 bg-white p-8 shadow-xl shadow-blue-900/5 transition-colors hover:border-blue-200">
                    <h4 class="mb-6 border-b border-slate-50 pb-4 font-bold text-slate-900">
                      {detail.label}
                    </h4>
                    <ul class="space-y-4">
                      {detail.items.map((item, iIdx) => (
                        <li class="flex items-start gap-3 text-sm leading-tight text-slate-600">
                          <CheckCircle2
                            size={16}
                            className="text-blue-500 mt-0.5 shrink-0"
                          />
                          <span>{item}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                ))}
              </div>
            </div>
            {/* Divider */}
            {idx < curriculumLevels.length - 1 && (
              <div class="absolute -bottom-12 left-0 flex w-full justify-center opacity-10">
                <div class="h-12 w-1 rounded-full bg-blue-500" />
              </div>
            )}
          </div>
        ))
      }
    </div>

    <div
      class="relative mt-32 overflow-hidden rounded-[3rem] bg-slate-900 p-12 text-center text-white"
    >
      <h3 class="relative z-10 mb-6 text-3xl font-bold md:text-4xl">
        Prêts à façonner leur avenir ?
      </h3>
      <p class="relative z-10 mx-auto mb-10 max-w-xl text-slate-400">
        Participez à notre prochaine journée portes ouvertes virtuelle pour
        discuter directement avec nos chefs de service et découvrir nos
        installations.
      </p>
      <div class="relative z-10 flex flex-col justify-center gap-4 sm:flex-row">
        <a
          href="/"
          class="rounded-2xl bg-blue-600 px-10 py-4 font-bold text-white shadow-xl shadow-blue-500/20 transition-all hover:bg-blue-700"
        >
          Réservez une visite
        </a>
      </div>
      {/* Background blobs */}
      <div
        class="absolute -top-20 -left-20 h-64 w-64 rounded-full bg-blue-500/10 blur-3xl"
      >
      </div>
      <div
        class="absolute -right-20 -bottom-20 h-64 w-64 rounded-full bg-indigo-500/10 blur-3xl"
      >
      </div>
    </div>
  </section>
</Layout>
